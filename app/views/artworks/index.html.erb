<h1>Listing artworks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Artworkimage</th>
    <th>Age</th>
    <th>Artist</th>
    <th>Price</th>
    <th>Type1</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artworks.each do |artwork| %>
  <tr>
    <td><%= artwork.title %></td>
    <td><%= artwork.artworkimage %></td>
    <td><%= artwork.age %></td>
    <td><%= artwork.artist_id %></td>
    <td><%= artwork.price %></td>
    <td><%= artwork.type1 %></td>
    <td><%= link_to 'Show', artwork %></td>
    <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
    <td><%= link_to 'Destroy', artwork, confirm: 'Are you sure?', method: :delete %></td>
	<td><%= button_to 'Buy This Artwork', new_order_path(oid: artwork) %></td>
	
  </tr>
<% end %>
</table>

